package com.learningactionscript3.vehicles {		import com.learningactionscript3.accessories.soundsystems.Radio;	import com.learningactionscript3.accessories.Tires;	import com.learningactionscript3.vehicles.Vehicle;		public class Truck extends Vehicle {				private var _tires:Tires;		public function Truck(mpg:Number, fuel:Number) {			super(mpg, fuel);			_tires = new Tires("snow");			trace(this, "has", _tires.type, "tires");			soundSystem = new Radio();		}				public function lowerTailgate () {			trace(this, "lowered tailgate");		}				override public function useAccessory():void {			super.useAccessory()			lowerTailgate();		}	}}